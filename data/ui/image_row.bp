using Gtk 4.0;
using Adw 1;

template ImageRow : Adw.ActionRow {
  activatable: true;
  focusable: true;
  selectable: true;
  title: "Image Title";
  subtitle: "test";
  styles ["image-row"]

  [prefix]
  Label size {
    width-chars: 5;
    max-width-chars: 7;
    valign: center;
    label: "10B";
    styles ["dim-label", "size"]
  }

  [suffix]
  Label tag {
    styles ["bubble", "caption", "tag"]
    label: "tag";
    valign: center;
  }
}