using Gtk 4.0;
using Adw 1;

template LogisticsWindow : Adw.ApplicationWindow {
  default-width: 800;
  default-height: 600;

  Adw.Leaflet leaflet {
  	can-navigate-back: true;
  	can-unfold: false;

  	Gtk.Box main_view {
  		orientation: vertical;

  		Adw.HeaderBar header_bar {
				centering-policy: strict;

				[title]
				Adw.ViewSwitcherTitle title {
					stack: view_stack;
				}

				[end]
				Gtk.MenuButton {
				  icon-name: "open-menu-symbolic";
				  menu-model: primary_menu;
				}
			}

			Gtk.Box {
				orientation: vertical;

				Adw.ViewStack view_stack {
					vexpand: true;
					hexpand: true;

					 Adw.ViewStackPage {
						name: "containers";
						title: "Containers";
						icon-name: "grid-filled-symbolic";

						child: .ContainersPage containers_page {};
					}

					Adw.ViewStackPage {
						name: "images";
						title: "Images";
						icon-name: "camera-photo-symbolic";

						child: .ImagesPage images_page {};
					}
				}

				Adw.ViewSwitcherBar {
					stack: view_stack;
					reveal: bind title.title-visible;
				}
			}
  	}
  }
}

menu primary_menu {
  section {
    submenu {
      label: _("Theme");
      item {
        label: _("Follow System");
        action: "app.style-variant";
        target: "use-default";
      }
      item {
        label: _("Light");
        action: "app.style-variant";
        target: "force-light";
      }
      item {
        label: _("Dark");
        action: "app.style-variant";
        target: "force-dark";
      }
    }
    item {
      label: _("Sort Enabled First");
      action: "app.sort-enabled-first";
    }
  }
  section {
    item {
      label: _("Release Notes");
      action: "win.show-release-notes";
    }
    item {
      label: _("About Extension Manager");
      action: "app.about";
    }
  }
}